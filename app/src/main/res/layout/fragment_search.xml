<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundRed"
    tools:context=".Fragmenter.SearchFragment">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">


    <EditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/searchButton"
        android:layout_marginLeft="25dp"
        android:layout_weight="1"
        android:background="@drawable/custom_rounded_corners"
        android:hint="search..."
        android:textColorHint="@color/darkRedButtonText"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        />

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@drawable/custom_rounded_corners"
        android:layout_alignParentRight="true"
        android:elevation="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_search"
        />

        <ImageButton
            android:id="@+id/friendButton"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/custom_rounded_corners"
            android:layout_alignParentRight="true"
            android:elevation="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:onClick="showPopup"
            android:src="@drawable/ic_plus"
            />

    </LinearLayout>


    <!-- Her er nested fragment -->

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/nestedFragment_Search">

        </FrameLayout>

</LinearLayout>

